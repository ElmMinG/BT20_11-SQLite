<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Thanh cuộn ngang chứa các nút -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:padding="8dp">

            <Button
                android:id="@+id/btn_add_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+Text"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btn_add_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+Img"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btn_add_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+User"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btn_open_databinding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Binding"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btn_pref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pref"
                android:backgroundTint="#4CAF50"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btn_sqlite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SQLite"
                android:backgroundTint="#673AB7"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btn_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="File"
                android:backgroundTint="#FF5722"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btn_async"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Async"
                android:backgroundTint="#E91E63"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btn_volley"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volley"
                android:backgroundTint="#FF9800"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btn_login_api"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login API"
                android:backgroundTint="#009688"
                android:layout_marginEnd="4dp"/>

            <!-- NÚT BẠN ĐANG THIẾU ĐÂY -->
            <Button
                android:id="@+id/btn_retrofit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Retrofit"
                android:backgroundTint="#3F51B5"/>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Các View hiển thị danh sách -->
    <ListView
        android:id="@+id/my_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <GridView
        android:id="@+id/my_grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="2"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</LinearLayout>